<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <%- include('header'); -%>
    <div class="main">
<div class="top">
  <h1>Welcome to the <%= title %> üç∏</h1>
  <% if (user) {%>
    <button>
      <a href="/create_message">Post Message</a>
    </button>
    <% if (user && !user.isMember) { %><button>
      <a href="/member">Be a member!</a>
    </button>
  <% } %>
  <%}%>
  <% if (!user) {%>
      <h3>Please log in or sign up to see more!</h3>
    <%}%>
</div>
        <ul class="feed">
          <% messages.forEach(function(message) { %>
            <li><div class="message-box">
              <% if (!user || !user.isMember) {%>
                <h2>Anon</h2>
              <% } else { %>
                <h2><%= message.postedBy.username %> </h2>
                <% } %>
                <% if (!user || !user.isMember) {%>
                  <h4>--:--</h4>
                <% } else { %>
                  <h4><%= message.timestamp %> </h4>
                  <% } %>  
                <hr>
              <h4><%=message.title %></h4>
               <p class="comment"><p><%- message.text %></p></p>
            </div></li>
          <% }); %>
        </ul>
  
    </div>
  </body>
</html>
